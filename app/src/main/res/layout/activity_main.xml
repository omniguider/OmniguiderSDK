<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/activity_main_domain_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/activity_main_syntrend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO NAVISDK SYNTREND"
            android:visibility="gone" />

        <Button
            android:id="@+id/activity_main_nmns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO NAVISDK NMNS"
            android:visibility="gone" />

        <Button
            android:id="@+id/activity_main_taipei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO TAIPEI" />

        <Button
            android:id="@+id/activity_main_nlpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO NLPI"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>