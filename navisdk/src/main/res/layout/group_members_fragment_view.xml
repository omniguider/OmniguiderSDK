<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_member_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/group_members_fragment_view_tb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary">


            <FrameLayout
                android:id="@+id/group_members_fragment_view_tv_back"
                android:layout_width="@dimen/action_bar_btn_width"
                android:layout_height="match_parent"
                android:layout_gravity="start">

                <ImageView
                    android:id="@+id/only_back_action_bar_img"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:gravity="center"
                    android:src="@mipmap/btn_back_b"  />

            </FrameLayout>

            <TextView
                android:id="@+id/group_members_fragment_view_tv_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/action_bar_title_group_members"
                android:textColor="@android:color/white" />

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/group_members_fragment_view_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/lower_layout"
                android:background="@android:color/white" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lower_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/member_group_dialog_tv_leave">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/shadow"
                    android:visibility="invisible"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/collectionForAdmin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="gone">

                    <LinearLayout
                        android:id="@+id/collection_time_setting_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/dialog_hint_create_group_meeting_time"
                            android:textColor="@color/hint_gray"
                            android:textSize="18.2sp" />

                        <NumberPicker
                            android:id="@+id/collection_time_hour"
                            android:layout_width="50dp"
                            android:layout_height="100dp"
                            android:descendantFocusability="blocksDescendants" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="："
                            android:textColor="@color/hint_gray"
                            android:textSize="18.2sp" />

                        <NumberPicker
                            android:id="@+id/collection_time_minute"
                            android:layout_width="50dp"
                            android:layout_height="100dp"
                            android:descendantFocusability="blocksDescendants" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/collection_place_setting_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/collection_time_setting_layout"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/dialog_hint_create_group_meeting_place"
                            android:textColor="@color/hint_gray"
                            android:textSize="18.2sp" />

                        <TextView
                            android:id="@+id/collection_place_setting_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/dialog_hint_create_group_meeting_place_default"
                            android:textColor="@color/blue_00"
                            android:textSize="18.2sp" />

                        <TextView
                            android:id="@+id/go_btn1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:padding="0dp"
                            android:text="@string/map_page_start_navi"
                            android:textColor="#4192ff"
                            android:textSize="18.2sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/collection_notice_setting_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/collection_place_setting_layout"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/dialog_hint_create_group_meeting_notice"
                            android:textColor="@color/hint_gray"
                            android:textSize="18.2sp" />

                        <NumberPicker
                            android:id="@+id/collection_notice_time_minute"
                            android:layout_width="50dp"
                            android:layout_height="100dp"
                            android:descendantFocusability="blocksDescendants" />

                        <TextView
                            android:id="@+id/collection_notice_setting_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/dialog_hint_create_group_meeting_notice_hint"
                            android:textColor="@color/hint_gray"
                            android:textSize="18.2sp"
                            tools:text="分鐘前" />


                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/reset_collection_setting_btn"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/reset"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:enabled="false"
                        app:backgroundTint="@color/colorPrimary" />
                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/collectionForUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/collectionTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/hint_gray"
                        android:textSize="18.2sp"
                        app:layout_constraintBottom_toTopOf="@+id/collectionPlace"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="15:30" />

                    <TextView
                        android:id="@+id/collectionPlaceHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/dialog_hint_create_group_meeting_place"
                        android:textColor="@color/hint_gray"
                        app:layout_constraintBottom_toTopOf="@+id/noticeTime"
                        android:textSize="18.2sp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/collectionPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:textColor="@color/hint_gray"
                        android:textSize="18.2sp"
                        app:layout_constraintBottom_toTopOf="@+id/noticeTime"
                        app:layout_constraintStart_toEndOf="@+id/collectionPlaceHint"
                        tools:text="澎湖古象" />

                    <TextView
                        android:id="@+id/go_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="0dp"
                        android:text="@string/map_page_start_navi"
                        android:textColor="#4192ff"
                        android:textSize="18.2sp"
                        app:layout_constraintBottom_toBottomOf="@+id/collectionPlace"
                        app:layout_constraintStart_toEndOf="@+id/collectionPlace"
                        app:layout_constraintTop_toTopOf="@+id/collectionPlace" />

                    <TextView
                        android:id="@+id/noticeTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/collectionPlace"
                        android:layout_gravity="center"
                        android:textColor="@color/hint_gray"
                        android:textSize="18.2sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="15:30" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/member_group_dialog_tv_leave"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:elevation="6dp"
                android:gravity="center"
                android:text="@string/dialog_btn_text_leave_group"
                android:textAllCaps="false"
                android:textColor="@color/red"
                android:textSize="@dimen/dialog_btn_text_size"
                app:backgroundTint="@android:color/white"
                app:cornerRadius="20dp"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/mask"
        android:background="@color/page_change_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>